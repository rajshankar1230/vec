<!DOCTYPE html>
<html>
<head>
    <title>Indian Projects</title>
    <!-- Load Tailwind CSS for modern styling -->
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .container { max-width: 1200px; margin: auto; padding: 20px; }
        .table-auto th, .table-auto td { padding: 12px 16px; text-align: left; }
    </style>
</head>
<body class="bg-gray-100 font-sans">
    <div class="container bg-white shadow-lg rounded-xl mt-10">
        <h1 class="text-3xl font-bold text-center py-6 text-green-700">Indian Projects</h1>
        <% if (projects.length === 0) { %>
            <p class="text-center text-gray-500 pb-5">No Indian projects found.</p>
        <% } else { %>
            <div class="overflow-x-auto">
                <table class="w-full table-auto border-collapse">
                    <thead>
                        <tr class="bg-green-100 text-green-800 uppercase text-sm leading-normal">
                            <th>SN</th>
                            <th>Project Name</th>
                            <th>EPC</th>
                            <th>Proponent</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody class="text-gray-600 text-sm font-light">
                        <% projects.forEach(p => { %>
                            <tr class="border-b border-gray-200 hover:bg-gray-100">
                                <td class="py-3 px-6"><%= p.SN %></td>
                                <td class="py-3 px-6 font-medium"><%= p.Nameofproject %></td>
                                <td class="py-3 px-6"><%= p.EPC %></td>
                                <td class="py-3 px-6"><%= p.Projectproponent %></td>
                                <td class="py-3 px-6"><%= p.Status %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } %>
    </div>
</body>
</html>